

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title </title>
    <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand " >Bem-vindo</h1>
            <button class="navbar-toggler">
                <span class="navbar-toggler-icon" data-togle="collapse" data-taget="theMenu"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contato</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="About">Sobre</a></li>
                </ul>
            </div>  
        </nav>
    </header>
    <section class="container">
        <h2 class="text-center"> @ViewBag.Title</h2>
        @RenderBody()
    </section>

    <footer class="container">
          <div class="text-center"> Todos direitos reservados  </div>
    </footer>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="~/js/index.js"></script>
@RenderSection("scripts", false)
</body>
</html>
