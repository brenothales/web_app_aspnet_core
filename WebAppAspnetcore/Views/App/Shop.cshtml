@model IEnumerable<Product>

<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">

    @foreach (var p in Model)
    {
    <div class="col-md-3">
        <div class="border bg-light rounded p-1">
        <img src="~/img/@(p.ArtId).jpg" class="img-fluid" alt="@p.Artist" title="@p.Title"/>
        <h3>@p.Category - @p.Size</h3>
        <ul>
            <li>Preço @p.Price</li>
            <li>Artista @p.Artist</li>
            <li>Título @p.Title</li>
            <li>Descrição @p.ArtDescription</li>
        </ul>
        <button id="buyButton" class="btn btn-success">Comprar</button>
        </div>
    </div>
    }

</div>
